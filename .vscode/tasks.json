    {
      "type": "shell",
      "label": "configure make",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "args": [
        "-j",
        "12"
      ],
    },
    {
      "label": "OpenOCD",
      "type": "shell",
      "command": "openocd",
      "args": [
        "-f",
        "interface/stlink.cfg",
        "-f",
        "target/stm32f1x.cfg",
        "-c",
        "gdb_port disabled",
        "-c",
        "tcl_port disabled",
        "-c",
        "program ./build/Example.elf",
        "-c",
        "reset",
        "-c",
        "shutdown"
      ],
      //先运行configure cmake
      "dependsOn": "configure make",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
